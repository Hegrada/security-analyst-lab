[mysqld]
# VULNERABLE CONFIGURATIONS
skip-networking = OFF
local-infile = ON
secure-file-priv = ""

# Logging configuration (for log analysis practice)
log_error = /var/log/mysql/error.log
general_log = 1
general_log_file = /var/log/mysql/general.log

# Disable SSL for testing (VULNERABLE)
ssl = OFF

[client]
# Exposed credentials in client config
user=root
password=toor
